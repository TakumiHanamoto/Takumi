<h1>Srental</h1>
<h3>依頼一覧</h3>
<%= button_to "orders_new", orders_new_path %>

<br>
<%= page_entries_info @orders %>
<div class="orders-container">
<% @orders.each do |o| %>
    <div class="order">
    <%= o.requester.email %>
    <%= o.title %>
    <%= o.body %>
    <%= o.created_at %>
    <%= image_tag o.image_url, size: "250x200" if o.image? %>
    <%= button_to "Details", order_path(o.id) %>
    <%= button_to "Edit", edit_order_path(o.id) %>
    <%= button_to "Delete", order_path(o.id), method: :delete %>
    </div>
<% end %>
</div>
<%= paginate @orders %>
<br><br>
<%= button_to 'Logout', destroy_requester_session_path, method: :delete %>